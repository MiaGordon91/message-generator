{
    "compilerOptions": {
      "target": "ESNext",
      "module": "es2020",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
    },
    "include": [
      "*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }